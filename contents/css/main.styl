@import "_objectgrid"
@import "_orbit"
@import "_vendor-prefixes"

serif-font = "Merriweather", serif 
sans-font = "Open Sans", sans-serif

bottomborder = .08em solid #333


offwhite = #fefefe
offblack = #333
lightgray = #ccc
brand = #358FFF

std-border = 1px solid lightgray

offwhite-grad()
	background-color #efefef
	background-image linear-gradient(0deg, #fff, #efefef) 

darkbg()
	background black
	background-image linear-gradient(45deg, #004, #000)

lighterbg()
	background offblack
	background-image linear-gradient(45deg, brand, #004 60%, #000)

.darkbg
	background black
	darkbg()

absexpand()
	position absolute
	top 0
	left 0
	right 0
	bottom 0

//RESET
*
	box-sizing: border-box

html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, outsput, ruby, section, summary, time, mark, audio, video
	margin: 0
	padding: 0
	border: 0
	font-size: 100%
	font: inherit
	vertical-align: baseline

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
	display: block

//PAGE

body
	font-family sans-font
	text-rendering: optimizeLegibility
	font-size: 18px
	word-spacing: .15em
	line-height: 1.5
	color: offblack
	background-image url('/images/tileflower_3.png')

p, pre
	margin-bottom .75em

ol, ul
	margin-left: 1em

li 
	margin-bottom: 0.5em
	margin-top: 0.5em

blockquote, q
	quotes: none

blockquote
	// border-left 5px solid offblack
	padding-left .75em
	position relative
	font-style italic
	font-size 1.1em
	&:before
		content ''
		position absolute
		lighterbg()
		top .3em
		left 0
		bottom .3em
		width .25em
	&:after
		content: ''
		content: none

// blockquote
// 	font-style italic
// 	position relative
// 	&:before, &:after 
// 		font-size 2em
// 		position absolute
// 	&:before
// 		content '\201C'
// 		top: -0.2em;
// 		left: -0.15em;

// 	&:after
// 		content '\201C'

q
	&:before, &:after
		content: ''
		content: none

code, pre
	font-family: Menlo, 'Panic Sans', monospace
	font-size: 0.875em
	white-space pre-wrap

table
	border-collapse: collapse
	border-spacing: 0

strong
	font-weight: 700

em 
	font-style italic

hr
	margin gutter 0
	height: 1px
	border: none
	background: lightgray

h1, h2, h3, h4, h5, h6
	font-family sans-font
	font-style italic
	line-height .9em
	margin-top .5em
	margin-bottom: .5em



h1
	font-size: 3em

h2
	font-size: 2em

h3
	font-size: 1.5em

h4
	font-size: 1.25em

h5, h6
	font-size: 1em

a
	color: brand
	text-decoration: none 
	cursor pointer
	&:visited
		color: darken(brand, 30%)
		text-decoration: none 
	&:hover, &:active
		color: darken(brand, 30%)
		text-decoration underline 


a.no-link-style
	color inherit !important
	text-decoration inherit !important


img
	max-width: 100%

.pull-right
	float right

.text-center
	text-align center

.text-left
	text-align left

.text-right
	text-align right

.white-bg
	background white

.offwhite-bg
	background offwhite

.large-text
	font-size 1.5em

.no-marg 
	margin 0

.no-t-marg
	margin-top 0

.semi-transp
	opacity .85

.gutter-space
	height gutter

.darktext
	darkbg()
	color white
	padding .5em .5em
	display inline-block
	span
		line-height 1em

	// @media under-tablet
	// 	background offblack
	// 	box-shadow -20px 0 0 offblack
	// 	box-shadow 20px 0 0 offblack


.orbit-bullets
	margin-top gutter * 0.5


//MAIN CONTAINER
.main
	margin-top gutter * 2
	margin-bottom @margin-top
	padding-top gutter
	padding-bottom @padding-top
	border std-border
	background offwhite
	box-sizing content-box

.markdown 
	img
		display block
		margin-left auto
		margin-right auto


#bgfx
	offwhite-grad()
	position: fixed
	z-index -1
	top: 0
	bottom: 0
	left: 0
	right: 0
	.el
		width: 100%
		position: absolute
		height: 100%

input, textarea
	font-family inherit
	line-height 1.5
	padding .2em .4em
	font-size inherit
	width 100%
	border std-border
	margin-top 0
	margin-bottom gutter * .5
	background white
	max-width auto
	&:focus
		outline none
		box-shadow inset 0 1px 2px lightgray
		border-color brand

form 
	._wrong
		border-color red
	._hidden
		width 0
		height 0
		font-size .01px
		margin 0
		border none
		padding 0
		position absolute
		z-index -20

.button, button
	margin 0
	text-decoration none
	// display inline-block
	cursor pointer
	text-align center
	border none
	font-family inherit
	line-height 1.5
	font-size 1em
	padding .5em 1em
	overflow hidden
	color white
	z-index 1
	position relative
	&:before
		content ''
		absexpand()
		darkbg()
		z-index -1
	&:after
		transition all 0.8s
		content ''
		absexpand()
		lighterbg()
		z-index -1
		opacity .1
	&:hover
		&:after
			opacity 1

.button.large
	font-size 1.3em

.skillrow
	font-size 1.2em
	// box-shadow 0 -10px 25px -10px rgba(black, .1), 0 10px 25px -10px rgba(black, .1)



///SLIDESHOW
#slideshow
	user-select: none
	margin-top gutter
	display inline-block
	position relative
	width 100%
	font-size .01px
	// border-bottom std-border

.slide
	overflow hidden
	opacity 0
	transition all .6s ease
	absexpand()
	img 
		max-width 100%
	&.active
		opacity 1

.slide-left, .slide-right
	cursor pointer
	width 0
	height 0
	// background black
	position absolute
	border inset gutter * .75

.slide-left
	top 50%
	left gutter * -2
	border-right-style solid
	border-color transparent
	border-right-color offblack
	&:hover
		border-right-color black
	@media under-page
		display none

.slide-right
	top 50%
	right gutter * -2
	border-color transparent
	border-left-style solid
	border-left-color offblack
	&:hover
		border-left-color black
	@media under-page
		display none

.counterbox
	position absolute 
	top gutter * -1
	right gutter * .5
	text-align center
	z-index 3

.counter
	display inline-block
	border 1px solid offblack
	border-radius 100px
	height 20px
	width 20px
	margin 2.5px
	background white
	cursor pointer
	transition all .6s ease

.counter:hover
	border-width 2px
	// box-shadow inset 1px 1px 6px rgba(0, 0, 0, .3)

.counter.active
	background offblack
	// box-shadow inset 1px 1px 6px rgba(0, 0, 0, .3)



.skill-tag
	float left
	white-space pre-line
	background offblack
	color white
	padding .1em .5em
	margin .2em

ul.nolist
	list-style-type none
	padding 0
	margin 0
	li 
		margin 0

