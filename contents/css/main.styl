.navbar
	padding-top gutter * .5
	padding-bottom @padding-top
	border-top std-border
	border-bottom @border-top
	// display inline-block
	text-align center
	font-size 1em
	background inherit
	z-index 5
	background offwhite
	position relative
	._item
		border-left std-border
		padding-left 1em
		padding-right 1em
		&:first-child
			border-left none
			padding-left 0
	&.-affixed
		border-top none
		position fixed
		top 0
		z-index 1
		// width 97%

.logo
	darkbg()
	position relative
	padding-top 100%
	display block
	.img 
		position absolute
		top 15%
		bottom @top
		left @top
		right @top

	&:before
		content ''
		background offwhite
		position absolute
		top 5%
		bottom @top
		left @top
		right @top

.page-title
	line-height .9
	font-size 4.5em
	margin-bottom gutter

.polaroid
	color: #333
	position relative
	margin-bottom gutter * 2
	._title
		color white
		background offblack
		margin-bottom 0
		line-height .9
		padding gutter * .5
		position absolute
		bottom gutter * 2

.content
	padding-top gutter * 2

.fakebody
	background offblack
	font-family sans-font
	color white

.headshot
	@media under-tablet
		font-size .9em

//BLOG LISTING
.blog-listing
	padding-top gutter * 2
	._story
		margin-bottom gutter * 2
		._title
			margin-top 0
		._details
			font-weight bold
			font-size 1em
			// padding-top .65ems
			margin-bottom 1.2em



//IMAGE ZOOM AND PAN
.zoom
	position: relative
	overflow: hidden
	.toggle
		position: absolute
		left: 0
		top: 0
		padding: .5em
		background: white
		i 
			cursor: pointer
			display: block
			font-size: 3em
		.z_out
			display: none
	&.zoomed
		img
			display: block
			cursor: move 
			width: auto !important
			max-width: 200%
			top: 0
		.z_in
			display: none
		.z_out
			display: block


.largea
	height 10000px


//MODAL WINDOW
.md-modal
	absexpand()
	position fixed
	padding-top 10%
	z-index 2000
	display none
	backface-visibility hidden
	// transform translateX(-50%) translateY(-50%)

.md-content
	max-width 500px
	margin-left auto
	margin-right auto
	& > *
		clearfix()
		background offwhite
		padding gutter * .5
		margin-left gutter * .5
		margin-right gutter * .5
		border std-border

.md-show
	display block
	& ~ .md-overlay
		opacity 1
		visibility visible

.md-overlay
	position fixed
	width 100%
	height 100%
	visibility hidden
	top 0
	left 0
	z-index 1000
	opacity 0
	background rgba(offwhite, .9)
	transition all 0.5s

